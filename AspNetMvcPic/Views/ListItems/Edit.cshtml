@model AspNetMvcPic.Models.ListItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ListItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div class="row">
                <div>
                    <img src="~/images/@Model.ProfilePicture"
                         class="card"
                         height="340" width="340"
                         asp-append-version="true" />
                    @Model.Name
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />


            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
           
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="ProfilePicture" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="ProfilePicture" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

